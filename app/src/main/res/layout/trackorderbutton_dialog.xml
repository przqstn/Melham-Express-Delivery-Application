<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/trackorder_button"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    android:paddingHorizontal="28dp"
    android:paddingTop="20dp"
    android:paddingBottom="3dp">

    <TextView
        android:id="@+id/Enter_OrderID"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="18dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Enter Order ID"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/OrderID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="1dp"
                android:background="@drawable/borders"
                android:drawableStart="@drawable/shipping"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:fontFamily="@font/montserrat_medium"
                android:hint="Paste Order ID"
                android:maxLines="1"
                android:padding="12dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/graphics_button_1"
                android:fontFamily="@font/montserrat_medium"
                android:text="TRACK NOW"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/OrderID"
                app:layout_constraintVertical_bias="0.404" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@drawable/horizontal_line" />

</LinearLayout>