<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".User.user_ongoing_order_details">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/background_color">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/header_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:padding="15dp"
                        android:text="Report"
                        android:textAlignment="center"
                        android:textColor="#191D31"
                        android:textSize="20sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="5dp"
                    android:text="Title of Complain"
                    android:textAlignment="textStart"
                    android:textColor="#223272"
                    android:textSize="18sp"
                    android:textStyle="light" />

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:padding="5dp">

                        <Spinner
                            android:id="@+id/spinner"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:entries="@array/complain_arrays"
                            android:gravity="start"
                            android:padding="15dp"
                            android:prompt="@string/complain_prompt"/>

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>




                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="5dp"
                    android:text="Description:"
                    android:textAlignment="textStart"
                    android:textColor="#223272"
                    android:textSize="18sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="220dp"
                    android:layout_gravity="center_horizontal"

                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/desc_content"
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:fontFamily="@font/montserrat_light"
                            android:gravity="start"
                            android:padding="5dp"
                            android:hint="Content"
                            android:textColor="#50555C"
                            android:textSize="16sp"
                            android:textStyle="light"
                            tools:layout_editor_absoluteX="1dp"
                            tools:layout_editor_absoluteY="200dp" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="5dp"
                    android:text="Proof/s:"
                    android:textAlignment="textStart"
                    android:textColor="#223272"
                    android:textSize="18sp" />



                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="#DFE2EB">

                    <RelativeLayout
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <Button
                            android:id="@+id/btn_file_upload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="5dp"
                            android:background="@color/color_transparent"
                            android:drawableStart="@drawable/icon_add_photo_alternate"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Add Files"
                            android:textAllCaps="false"
                            android:textSize="20sp" />

                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_reportSubmit"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="250dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/graphics_button_1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Submit"
                    android:textColor="@color/white"
                    android:visibility="visible" />



            </LinearLayout>


        </RelativeLayout>





    </androidx.core.widget.NestedScrollView>


</FrameLayout>