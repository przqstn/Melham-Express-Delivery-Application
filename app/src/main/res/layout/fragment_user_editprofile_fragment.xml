<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/riderProfileLayout1"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ProfileLayout1"
                android:layout_width="match_parent"
                android:layout_height="287dp"
                android:layout_gravity="top"
                android:background="@drawable/background"
                android:orientation="horizontal"
                android:paddingHorizontal="35dp">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_user"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/profile_ellipse"
                    android:contentDescription="@string/hi_user"
                    android:padding="1dp"
                    android:src="@drawable/rounded" />

                <ImageButton
                    android:id="@+id/btn_Upload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="-45dp"
                    android:background="@color/color_transparent"
                    android:elevation="2dp"
                    android:padding="20dp"
                    android:src="@drawable/upload_photo"
                    tools:ignore="SpeakableTextPresentCheck" />

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="-8dp"
                    android:layout_marginBottom="12dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ProfileLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="30dp"
                android:paddingVertical="30dp">

                <LinearLayout
                    android:id="@+id/edit1"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/borders"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Contact Number:"
                        tools:ignore="TextContrastCheck" />

                    <TextView
                        android:id="@+id/user_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:padding="5dp"
                        android:textColor="@color/strokes" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/edit2"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/borders"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Primary Address:"
                        tools:ignore="TextContrastCheck" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_transparent"
                        android:drawableEnd="@drawable/edit_icon2"
                        android:drawableTint="@color/strokes"
                        android:drawablePadding="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingVertical="5dp"
                        android:paddingEnd="10dp"
                        android:textColor="@color/strokes"
                        android:textSize="14sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:scrollHorizontally="true"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/edit3"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/borders"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/btndelete_secondary"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Secondary Address:"
                        tools:ignore="TextContrastCheck" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edit_secondary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="5dp"
                        android:layout_toStartOf="@+id/btndelete_secondary"
                        android:background="@color/color_transparent"
                        android:drawableEnd="@drawable/edit_icon2"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/strokes"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLines="1"
                        android:paddingVertical="5dp"
                        android:paddingEnd="10dp"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/strokes"
                        android:textSize="14sp"
                        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                    <ImageButton
                        android:id="@+id/btndelete_secondary"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_transparent"
                        android:backgroundTint="@color/strokes"
                        android:src="@drawable/icon_delete" />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="35dp"
                    android:background="@drawable/borders"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/user_changePW"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="5dp"
                        android:paddingEnd="10dp"
                        android:drawablePadding="10dp"
                        android:drawableEnd="@drawable/forward_arrow"
                        android:drawableTint="@color/strokes"
                        android:fontFamily="@font/montserrat_mediumitalic"
                        android:text="Change Password"
                        android:textColor="@color/app_color"
                        android:gravity="end"
                        tools:ignore="TextContrastCheck" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ProfileLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="30dp"
        android:paddingVertical="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="@+id/scrollView4"
        app:layout_constraintStart_toStartOf="@+id/scrollView4">

        <ImageButton
            android:id="@+id/btn_saveChanges"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:layout_marginVertical="8dp"
            android:background="@drawable/graphics_button_1"
            android:elevation="5dp"
            android:src="@drawable/save_icon" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>