<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEFFA"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".User.user_pending_fragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="530dp"
        android:layout_gravity="center|top"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_user_pending"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="180dp">

        <ImageView
            android:id="@+id/emptyImage"
            android:layout_width="253dp"
            android:layout_height="205dp"
            android:layout_gravity="center|fill_vertical"
            android:src="@drawable/userhomebox"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/emptyText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No Activity Yet"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:visibility="visible" />

    </LinearLayout>

</FrameLayout>