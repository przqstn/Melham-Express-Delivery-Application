<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#EEEFFA"
    android:backgroundTint="@color/background_color"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="285dp"
                    android:background="#D3DCFA "
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/topimage" />

                <TextView
                    android:id="@+id/txtRegDriveTitle"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginTop="12dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Become a courier"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"

                    />

                <EditText
                    android:id="@+id/editTextPhoneNumDriver"
                    android:layout_width="370dp"
                    android:layout_height="59dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edit_text_round"
                    android:drawableStart="@drawable/ic_baseline_local_phone_24"
                    android:drawableLeft="@drawable/ic_baseline_phone_in_talk_24"
                    android:drawablePadding="16dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:hint="Enter Your Phone Number"
                    android:inputType="phone"
                    android:paddingLeft="15dp"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/phoneErrorRider"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingLeft="285dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textColor="#FF0033"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/edTextPassL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/pwfield"
                        android:layout_width="370dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edit_text_round"
                        android:drawableStart="@drawable/ic_baseline_lock_24"
                        android:drawableLeft="@drawable/ic_baseline_lock_24"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Enter your password"
                        android:inputType="textPassword"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="16sp"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/passErrorRider"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingLeft="270dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textColor="#FF0033"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/invalidPassRider"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textColor="#FF0033"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/pwConfirm"
                        android:layout_width="370dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/edit_text_round"
                        android:drawableStart="@drawable/ic_baseline_lock_24"
                        android:drawableLeft="@drawable/ic_baseline_lock_24"
                        android:drawablePadding="15dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:hint="Confirm your password"
                        android:inputType="textPassword"
                        android:paddingLeft="15dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="16sp"
                        tools:ignore="SpeakableTextPresentCheck" />
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/confirmErrorRider"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingLeft="200dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textColor="#FF0033"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/invalidConfirmRider"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingLeft="185dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textColor="#FF0033"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Details"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginTop="40dp"
                    android:padding="5dp"
                    />

                <Spinner
                    android:id="@+id/spinnerCityDriver"
                    android:layout_width="370dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/edit_text_round"
                    android:contentDescription="City"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/cityError"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingLeft="285dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textColor="#FF0033"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/spinnerVehicleDriver"
                    android:layout_width="370dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/edit_text_round"
                    android:contentDescription="Vehicle"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/spinnerVehicleBrand"
                    android:layout_width="352dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/graphics_edittext_1"
                    android:drawableStart="@drawable/ic_baseline_directions_car_24"
                    android:drawableLeft="@drawable/ic_baseline_directions_car_24"
                    android:drawablePadding="15dp"
                    android:contentDescription="Vehicle"
                    android:spinnerMode="dropdown"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/vehicleError"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingLeft="285dp"
                    android:paddingTop="5dp"
                    android:text="TextView"
                    android:textColor="#FF0033"
                    android:textSize="12sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editTextVehicleBrand"
                    android:layout_width="352dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/graphics_edittext_1"
                    android:drawableStart="@drawable/ic_baseline_directions_car_24"
                    android:drawableLeft="@drawable/ic_baseline_directions_car_24"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:hint="Specify Brand"
                    android:paddingLeft="15dp"
                    android:textColor="@color/black"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/editTextVehicleModel"
                    android:layout_width="352dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/graphics_edittext_1"
                    android:drawableStart="@drawable/ic_baseline_directions_car_24"
                    android:drawableLeft="@drawable/ic_baseline_directions_car_24"
                    android:drawablePadding="15dp"
                    android:ems="10"
                    android:hint="Specify Model"
                    android:paddingLeft="15dp"
                    android:visibility="gone" />

                <CheckBox
                    android:id="@+id/checkBoxAgreeRider"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="@string/agreeDriverText"
                    android:textColor="@color/textGray"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btnRegRider"
                    android:layout_width="350dp"
                    android:layout_height="46dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/graphics_button_1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Get Started"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>